---
import hardskills from '../../public/hardskills.json'
import HardSkillIcon from '../components/HardSkillIcon.astro'
---

<section
  id="my-skills"
  class="mx-auto grid min-h-screen w-4/5 snap-start place-content-center md:w-2/3"
>
  <h2 class="categorie">Mes comp√©tences</h2>
  <div class="flex flex-col md:flex-row">
    <div class="highlight w-full md:w-2/3">
      <p class="list-name text-center">Front-End</p>
      <ul class="flex flex-row flex-wrap justify-around gap-2 p-0">
        {
          hardskills['Front-End'].map((e) => (
            <HardSkillIcon src={e.src} name={e.name} level={e.level} />
          ))
        }
      </ul>
    </div>
    <div class="highlight w-full md:w-1/3">
      <p class="list-name text-center">Autres</p>
      <ul class="flex flex-row flex-wrap justify-around gap-2 p-0">
        {
          hardskills['Autres'].map((e) => (
            <HardSkillIcon src={e.src} name={e.name} level={e.level} />
          ))
        }
      </ul>
    </div>
  </div>
</section>
