---
import cursus from '../../public/cursus.json'
import CursusCard from '../components/CursusCard.astro'
---

<div
  id="my-resume"
  class="mx-auto grid min-h-screen w-4/5 place-content-center gap-2"
>
  <h2 class="categorie">Expériences</h2>
  <div class="description--list" id="xps">
    <h3 class="text-4xl mb-5">Expériences professionnelles</h3>
    <ul>
      {cursus['Expériences Professionnelles'].map((elem) => <CursusCard {...elem} />)}
    </ul>
  </div>
  <div class="description--list" id="projets">
    <h3 class="text-4xl mb-5">Projets</h3>
    <ul>
      {cursus['Projet personnel'].map((elem) => <CursusCard {...elem} />)}
    </ul>
  </div>
  <div class="description--list" id="formations">
    <h3 class="text-4xl mb-5">Formations</h3>
    <ul>
      {cursus.Études.map((elem) => <CursusCard {...elem} />)}
    </ul>
  </div>
</div>

<style>
  #my-resume {
    grid-template-columns: 1fr;
    grid-template-areas: 
      "h2"
      "xps"
      "projets"
      "formation";
    @media (min-width: 768px) {
      grid-template-areas: 
        "h2 h2"
        "xps formation"
        "projets formation";
      grid-template-columns: repeat(2, 1fr);
    }
    h2 {
      grid-area: h2;
    }
    #xps {
      grid-area: xps;
    }
    #projets {
      grid-area: projets;
    }
    #formations {
      grid-area: formation;
    }
    .description--list {
      background-color: rgba(255,255,255,0.2);
      border-radius: 16px;
      padding: 10px 0 10px 24px;
      margin-bottom: 8px;
      backdrop-filter: blur(3px);
      height: fit-content;
    }
  }
</style>